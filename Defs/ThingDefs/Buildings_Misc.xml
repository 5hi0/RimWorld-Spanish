<?xml version="1.0" encoding="utf-8" ?>
<Buildings>


  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
  </ThingDef>



  <ThingDef ParentName="BuildingBase">
    <defName>SunLamp</defName>
    <eType>BuildingComplex</eType>
    <label>sun lamp</label>
    <thingClass>Building</thingClass>
    <category>Building</category>
    <graphicPathSingle>Things/Building/Production/LampSun</graphicPathSingle>
    <altitudeLayer>BuildingTall</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <statBases>
      <MaxHealth>50</MaxHealth>
      <WorkToBuild>330</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <selectable>true</selectable>
    <description>Lights an area brightly enough to grow crops.</description>
    <size>(1,1)</size>
    <costList>
      <Metal>20</Metal>
    </costList>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <comps>
      <li>
        <compClass>CompGlower</compClass>
        <overlightRadius>7.0</overlightRadius>
        <glowRadius>14</glowRadius>
        <glowColor>(370,370,370,0)</glowColor>
      </li>
      <li>
        <compClass>CompPowerTrader</compClass>
        <startElectricalFires>true</startElectricalFires>
        <soundPowerOn>PowerOnSmall</soundPowerOn>
        <soundPowerOff>PowerOffSmall</soundPowerOff>
        <basePowerConsumption>600</basePowerConsumption>
      </li>
    </comps>
    <!-- Determined by trial and error
    This value isn't perfect because these radii use different algorithms
    but it matches in this case-->
    <specialDisplayRadius>5.8</specialDisplayRadius>
    <designationCategory>Misc</designationCategory>
    <sunShadowInfo>
      <basewidth>0.2</basewidth>
      <baseHeight>0.2</baseHeight>
      <tallness>0.4</tallness>
      <offset>(0,0,-0.1)</offset>
    </sunShadowInfo>
    <rotatable>false</rotatable>
    <designationHotKey>U</designationHotKey>
  </ThingDef>




  <ThingDef ParentName="BuildingBase">
    <defName>OrbitalTradeBeacon</defName>
    <eType>BuildingComplex</eType>
    <label>orbital trade beacon</label>
    <thingClass>Building_OrbitalTradeBeacon</thingClass>
    <graphicPathSingle>Things/Building/DropBeacon</graphicPathSingle>
    <altitudeLayer>Waist</altitudeLayer>
    <statBases>
      <MaxHealth>75</MaxHealth>
      <WorkToBuild>1300</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <description>Required for orbital trading. You can only sell goods that are near an orbital trade beacon and not under a roof. Orbital traders will also drop goods near this.</description>
    <size>(1,1)</size>
    <drawerType>MapMeshAndRealTime</drawerType>
    <specialDisplayRadius>7.9</specialDisplayRadius>
    <costList>
      <Metal>60</Metal>
    </costList>
    <filthLeavings>
      <SlagRubble>1</SlagRubble>
    </filthLeavings>
    <overdraw>false</overdraw>
    <pathCost>30</pathCost>
    <designationCategory>Misc</designationCategory>
    <sunShadowInfo>
      <basewidth>0.3</basewidth>
      <baseHeight>0.3</baseHeight>
      <tallness>0.6</tallness>
    </sunShadowInfo>
    <rotatable>false</rotatable>
    <placementRestricters>
      <li>PlacementRestricter_NotUnderRoof</li>
    </placementRestricters>
    <designationHotKey>O</designationHotKey>
  </ThingDef>


  <ThingDef ParentName="BuildingBase">
    <defName>ResearchBench</defName>
    <eType>Building_ResearchBench</eType>
    <label>research bench</label>
    <thingClass>Building_ResearchBench</thingClass>
    <graphicPathSingle>Things/Building/Production/ResearchBench</graphicPathSingle>
    <altitudeLayer>Waist</altitudeLayer>
    <passability>Impassable</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <statBases>
      <MaxHealth>250</MaxHealth>
      <WorkToBuild>900</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <description>Researchers work here to discover new things.</description>
    <size>(2,5)</size>
    <madeFromStuff>true</madeFromStuff>
    <costStuffCount>40</costStuffCount>
    <costList>
      <Metal>50</Metal>
    </costList>
    <overdraw>true</overdraw>
    <fillPercent>0.4</fillPercent>
    <killedLeavings>
      <ChunkSlag>4</ChunkSlag>
    </killedLeavings>
    <filthLeavings>
      <SlagRubble>2</SlagRubble>
    </filthLeavings>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <interactionSquareOffset>(2,0,0)</interactionSquareOffset>
    <hasInteractionSquare>true</hasInteractionSquare>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Misc</designationCategory>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <itemSurface>true</itemSurface>
    <designationHotKey>N</designationHotKey>
  </ThingDef>


  <ThingDef ParentName="BuildingBase">
    <defName>CommsConsole</defName>
    <eType>Building_CommsConsole</eType>
    <label>comms console</label>
    <thingClass>Building_CommsConsole</thingClass>
    <graphicPathSingle>Things/Building/CommsConsole</graphicPathSingle>
    <overdraw>true</overdraw>
    <altitudeLayer>BuildingTall</altitudeLayer>
    <passability>Impassable</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <statBases>
      <MaxHealth>250</MaxHealth>
      <WorkToBuild>1350</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <description>Communicate with nearby ships here for negotiation and trade.</description>
    <size>(3,2)</size>
    <costList>
      <Metal>120</Metal>
    </costList>
    <interactionSquareOffset>(0,0,2)</interactionSquareOffset>
    <hasInteractionSquare>true</hasInteractionSquare>
    <killedLeavings>
      <ChunkSlag>3</ChunkSlag>
    </killedLeavings>
    <filthLeavings>
      <SlagRubble>2</SlagRubble>
    </filthLeavings>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Misc</designationCategory>
    <comps>
      <li>
        <compClass>CompPowerTrader</compClass>
        <startElectricalFires>true</startElectricalFires>
        <basePowerConsumption>200</basePowerConsumption>
      </li>
    </comps>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
  </ThingDef>






  <ThingDef ParentName="BuildingBase">
    <defName>Grave</defName>
    <eType>BuildingInert</eType>
    <label>grave</label>
    <thingClass>Building_Grave</thingClass>
    <graphicPathSingle>Things/Building/GraveEmpty</graphicPathSingle>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <overdraw>true</overdraw>
    <useStandardHealth>false</useStandardHealth>
    <description>Place the dead in graves to give them a decent final resting place.</description>
    <size>(1,2)</size>
    <statBases>
      <WorkToBuild>650</WorkToBuild>
    </statBases>
    <passability>Standable</passability>
    <building>
      <fixedStorageSettings>
        <allowances>
          <categories>
            <li>Corpses</li>
          </categories>
        </allowances>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
        <allowances>
          <categories>
            <li>CorpsesHumanoid</li>
          </categories>
          <specialFiltersToAllow>
            <li>AllowBuried</li>
          </specialFiltersToAllow>
        </allowances>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <terrainAffordanceNeeded>Diggable</terrainAffordanceNeeded>
    <designationCategory>Misc</designationCategory>
    <constructEffect>ConstructDirt</constructEffect>
    <itemSurface>true</itemSurface>
  </ThingDef>





  <ThingDef ParentName="BuildingBase">
    <defName>FertilizerPump</defName>
    <eType>BuildingComplex</eType>
    <label>fertilizer pump</label>
    <thingClass>Building_FertilizerPump</thingClass>
    <graphicPathSingle>Things/Building/FertilizerPump</graphicPathSingle>
    <altitudeLayer>BuildingTall</altitudeLayer>
    <overdraw>false</overdraw>
    <statBases>
      <MaxHealth>50</MaxHealth>
      <WorkToBuild>1000</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <description>Slowly expands a field of growable soil around itself.</description>
    <size>(1,1)</size>
    <costList>
      <Metal>50</Metal>
    </costList>
    <filthLeavings>
      <SlagRubble>2</SlagRubble>
     </filthLeavings>
    <pathCost>30</pathCost>
    <tickerType>Rare</tickerType>
    <comps>
      <li>
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>100</basePowerConsumption>
        <soundAmbientPowered>FertilizerPump_AmbiencePowered</soundAmbientPowered>
      </li>
    </comps>
    <researchPrerequisite>FertilizerPump</researchPrerequisite>
    <sunShadowInfo>
      <baseWidth>0.3</baseWidth>
      <baseHeight>0.3</baseHeight>
      <tallness>0.5</tallness>
    </sunShadowInfo>
    <designationCategory>Misc</designationCategory>
    <rotatable>false</rotatable>
  </ThingDef>



</Buildings>