<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

	<RecipeDef>
		<defName>MakeStoneBlocks</defName>
		<label>make stone blocks</label>
		<description>Cuts rock chunks into usable stone blocks.</description>
		<jobString>Stonecutting.</jobString>
		<workAmount>700</workAmount>
		<workSpeedStat>StonecuttingSpeed</workSpeedStat>
		<efficiencyStat>StonecuttingEfficiency</efficiencyStat>
		<workEffect>CutStone</workEffect>
    <sustainerSoundDef>Recipe_MakeStoneBlocks</sustainerSoundDef>
    <ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>ChunkRock</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<products>
      <StoneBlocks>22</StoneBlocks>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>ChunkRock</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillGains>
			<li>
				<skill>Crafting</skill>
				<xp>100</xp>
			</li>
		</skillGains>
	</RecipeDef>

  <RecipeDef>
    <defName>ExtractMetalFromSlag</defName>
    <label>smelt metal from slag</label>
    <description>Use heat and strong electromagnets to separate useful metal from slag chunks.</description>
    <jobString>Smelting metal from slag.</jobString>
    <workAmount>1600</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <efficiencyStat>SmeltingEfficiency</efficiencyStat>
    <workEffect>UseMetalRefinery</workEffect>
    <sustainerSoundDef>Recipe_UseMetalRefinery</sustainerSoundDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ChunkSlag</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <Metal>8</Metal>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ChunkSlag</li>
      </thingDefs>
    </fixedIngredientFilter>
    <skillGains>
      <li>
        <skill>Crafting</skill>
        <xp>120</xp>
      </li>
    </skillGains>
  </RecipeDef>

  
  




