<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="PlantBase" Abstract="True">
    <eType>Plant</eType>
    <category>Plant</category>
    <thingClass>Plant</thingClass>
    <altitudeLayer>LowPlant</altitudeLayer>
    <useStandardHealth>True</useStandardHealth>
    <statBases>
      <Flammability>1.0</Flammability>
    </statBases>
    <tickerType>Rare</tickerType>
    <selectable>False</selectable>
    <neverMultiSelect>True</neverMultiSelect>
    <drawerType>MapMeshOnly</drawerType>
    <shaderType>CutoutPlant</shaderType>
    <plant>
      <harvestDestroys>true</harvestDestroys>
      <harvestingSound>Harvest_Standard</harvestingSound>
      <harvestFinishSound>Harvest_Standard_Finish</harvestFinishSound>
      <sowWork>150</sowWork>
      <fertilityMin>0.5</fertilityMin>
      <fertilityFactorGrowthRate>1.0</fertilityFactorGrowthRate>
      <topWindExposure>0.1</topWindExposure>
      <growthPer20kTicks>0.48</growthPer20kTicks>
      <lifeSpan>200000</lifeSpan>
      <growMinGlow>Overlit</growMinGlow>
      <seedShootMinGrowthPercent>0.6</seedShootMinGrowthPercent>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.00</max>
      </visualSizeRange>
    </plant>
  </ThingDef>

  <!--======================= Wild plants - carpets ========================-->

  <ThingDef ParentName="PlantBase">
    <defName>PlantTallGrass</defName>
    <label>tall grass</label>
    <statBases>
      <MaxHealth>90</MaxHealth>
      <Beauty>-1</Beauty>
    </statBases>
    <description>Wild tall grass.</description>
    <pathCost>18</pathCost>
    <graphicPathFolderRandom>Things/Plant/Grass</graphicPathFolderRandom>
    <food>
      <quality>Plant</quality>
      <nutrition>30</nutrition>
    </food>
    <plant>
      <harvestWork>60</harvestWork>
      <fertilityMin>0.05</fertilityMin>
      <maxMeshCount>9</maxMeshCount>
      <visualSizeRange>
        <min>0.7</min>
        <max>0.85</max>
      </visualSizeRange>
      <growthPer20kTicks>0.65</growthPer20kTicks>
      <topWindExposure>0.4</topWindExposure>
      <seedShootRadius>10</seedShootRadius>
      <lifeSpan>300000</lifeSpan>
      <fertilityFactorGrowthRate>0.90</fertilityFactorGrowthRate>
      <fertilityFactorPlantChance>0.90</fertilityFactorPlantChance>
    </plant>
  </ThingDef>

  <!--============================ Wild - Trees ============================-->

  <ThingDef ParentName="PlantBase" Name="TreeBase" Abstract="True">
    <statBases>
      <MaxHealth>300</MaxHealth>
      <Beauty>0</Beauty>
    </statBases>
    <description>A tree.</description>
    <altitudeLayer>BuildingTall</altitudeLayer>
    <selectable>true</selectable>
    <fillPercent>0.35</fillPercent>
    <sunShadowInfo>
      <baseWidth>0.3</baseWidth>
      <baseHeight>0.3</baseHeight>
      <tallness>0.3</tallness>
    </sunShadowInfo>
    <passability>PassThroughOnly</passability>
    <pathCost>130</pathCost>
    <plant>
      <harvestingSound>Harvest_Tree</harvestingSound>
      <harvestFinishSound>Harvest_Tree_Finish</harvestFinishSound>
      <harvestWork>1000</harvestWork>
      <harvestDestroys>true</harvestDestroys>
      <harvestedThingDef>WoodLog</harvestedThingDef>
      <harvestYieldRange>
        <min>10</min>
        <max>50</max>
      </harvestYieldRange>
      <harvestTag>Wood</harvestTag>
      <harvestMinGrowth>0.40</harvestMinGrowth>
      <sowableGround>true</sowableGround>
      <sowWork>1500</sowWork>
      <sowRequireOpenPassageAdjacent>true</sowRequireOpenPassageAdjacent>
      <visualSizeRange>
        <min>1.3</min>
        <max>2.0</max>
      </visualSizeRange>
      <fertilityMin>0.3</fertilityMin>
      <growthPer20kTicks>0.05</growthPer20kTicks>
      <topWindExposure>0.25</topWindExposure>
      <seedShootRadius>15</seedShootRadius>
      <lifeSpan>3000000</lifeSpan>
      <fertilityFactorGrowthRate>0.5</fertilityFactorGrowthRate>
      <wildClusterSizeRange>
        <min>8</min>
        <max>30</max>
      </wildClusterSizeRange>
      <wildClusterRadius>8</wildClusterRadius>

    </plant>
  </ThingDef>


  <ThingDef ParentName="TreeBase">
    <defName>PlantTreeCecropia</defName>
    <label>cecropia tree</label>
    <description>One of the most common rainforest trees. Grows very fast.</description>
    <graphicPathFolderRandom>Things/Plant/TreeCecropia</graphicPathFolderRandom>
    <statBases>
      <Beauty>2</Beauty>
    </statBases>
    <plant>
      <growthPer20kTicks>0.05</growthPer20kTicks>
      <harvestWork>700</harvestWork>
      <harvestYieldRange>
        <min>10</min>
        <max>20</max>
      </harvestYieldRange>
    </plant>
  </ThingDef>

</Defs>