<?xml version="1.0" encoding="utf-8" ?>

<!--
	If healthDiffSkin or healthDiffSolid is not specified, then healthDiff is used.
-->

<DamageTypes>

  <!-- Local injuries -->

  <DamageTypeDef Name="LocalInjuryBase" Abstract="True">
    <workerClass>DamageType_AddLocalInjury</workerClass>
  </DamageTypeDef>

  <DamageTypeDef ParentName="LocalInjuryBase">
    <defName>Cut</defName>
    <label>cut</label>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} has been cut to death.</deathMessage>
    <healthDiff>Cut</healthDiff>
    <healthDiffSkin>Cut</healthDiffSkin>
    <healthDiffSolid>Crack</healthDiffSolid>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Slice</impactSoundType>
    <armorCategory>Piercing</armorCategory>
  </DamageTypeDef>

  <DamageTypeDef ParentName="LocalInjuryBase">
    <defName>Crush</defName>
    <label>crush</label>
    <externalViolence>true</externalViolence>
