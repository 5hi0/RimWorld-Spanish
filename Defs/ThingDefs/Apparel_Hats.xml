  <ThingDef ParentName="ApparelBase">
    <defName>Apparel_CowboyHat</defName>
    <label>cowboy hat</label>
    <description>Stylish yet rugged, this hat keeps the sun and rain off - and it gives anyone who wears it a bit of extra charm. It is the most important part of traditional western attire.</description>
    <graphicPathSingle>Things/Pawn/Humanoid/Apparel/CowboyHat/CowboyHat</graphicPathSingle>
    <baseMarketValue>50</baseMarketValue>
    <statBases>
      <DamageDeflection_Blunt>0.03</DamageDeflection_Blunt>
      <DamageDeflection_Piercing>0.03</DamageDeflection_Piercing>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.15</SocialImpact>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <worngraphicPathMulti>Things/Pawn/Humanoid/Apparel/CowboyHat/CowboyHat</worngraphicPathMulti>
      <layers>
        <li>Overhead</li>
      </layers>
      <commonality>70</commonality>
      <tags>
        <li>HatCivilian</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.9,0.54,0.15,1)</only>
        </li>
        <li>
          <weight>15</weight>
          <only>RGBA(0.9,0.6,0.18,1)</only>
        </li>
        <li>
          <weight>20</weight>
          <only>RGBA(0.9,0.42,0.23,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

