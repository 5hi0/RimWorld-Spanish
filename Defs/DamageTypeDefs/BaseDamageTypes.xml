    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <hasChanceToAdditionallyDamageInnerSolidParts>true</hasChanceToAdditionallyDamageInnerSolidParts>
    <impactSoundType>Blunt</impactSoundType>
