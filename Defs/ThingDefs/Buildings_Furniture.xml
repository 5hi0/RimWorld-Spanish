  <!--============================== Storage ==============================-->


  <ThingDef ParentName="BuildingBase">
    <defName>EquipmentRack</defName>
    <eType>BuildingComplex</eType>
    <label>equipment rack</label>
    <thingClass>Building_Storage</thingClass>
    <graphicPathSingle>Things/Building/Furniture/EquipmentRack</graphicPathSingle>
    <altitudeLayer>Waist</altitudeLayer>
    <passability>Impassable</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <madeFromStuff>True</madeFromStuff>
    <costStuffCount>30</costStuffCount>
    <statBases>
      <MaxHealth>100</MaxHealth>
      <WorkToBuild>580</WorkToBuild>
      <Flammability>1.0</Flammability>
    </statBases>
    <description>Haulers carry equipment here for storage.</description>
    <size>(2,1)</size>
    <overdraw>true</overdraw>
    <killedLeavings>
      <ChunkSlag>1</ChunkSlag>
    </killedLeavings>
    <filthLeavings>
      <SlagRubble>2</SlagRubble>
    </filthLeavings>
    <building>
      <fixedStorageSettings>
        <priority>Important</priority>
        <allowances>
          <categories>
            <li>Weapons</li>
          </categories>
        </allowances>
      </fixedStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <designationCategory>Furniture</designationCategory>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <itemSurface>true</itemSurface>
    <designationHotKey>I</designationHotKey>
  </ThingDef>









