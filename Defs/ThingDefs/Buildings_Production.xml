  <ThingDef ParentName="BuildingBase">
    <defName>NutrientPasteDispenser</defName>
    <eType>BuildingComplex</eType>
    <label>nutrient paste dispenser</label>
    <thingClass>Building_NutrientPasteDispenser</thingClass>
    <graphicPathSingle>Things/Building/Production/NutrientDispenser</graphicPathSingle>
    <altitudeLayer>BuildingTall</altitudeLayer>
    <passability>Impassable</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <statBases>
      <WorkToBuild>1800</WorkToBuild>
      <MaxHealth>350</MaxHealth>
      <Flammability>1.0</Flammability>
    </statBases>
    <description>Synthesizes nutrient paste from organic feedstocks.</description>
    <building>
      <wantsHopperAdjacent>true</wantsHopperAdjacent>
      <foodCostPerDispense>10</foodCostPerDispense>
      <soundDispense>DispensePaste</soundDispense>
    </building>
    <comps>
      <li>
        <compClass>CompPowerTrader</compClass>
        <startElectricalFires>true</startElectricalFires>
        <basePowerConsumption>200</basePowerConsumption>
      </li>
    </comps>
    <size>(3,4)</size>
    <costList>
      <Metal>90</Metal>
    </costList>
    <overdraw>true</overdraw>
    <interactionSquareOffset>(0,0,3)</interactionSquareOffset>
    <hasInteractionSquare>true</hasInteractionSquare>
    <killedLeavings>
      <ChunkSlag>6</ChunkSlag>
     </killedLeavings>
    <filthLeavings>
      <SlagRubble>3</SlagRubble>
    </filthLeavings>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Production</designationCategory>
    <staticSunShadowHeight>0.75</staticSunShadowHeight>
  </ThingDef>





  <ThingDef ParentName="BuildingBase">
    <defName>Hopper</defName>
    <eType>BuildingComplex</eType>
    <label>hopper</label>
    <thingClass>Building_Storage</thingClass>
    <graphicPathSingle>Things/Building/Production/Hopper</graphicPathSingle>
    <altitudeLayer>Waist</altitudeLayer>
    <passability>Impassable</passability>
    <building>
      <fixedStorageSettings>
        <priority>Important</priority>
        <allowances>
          <categories>
            <li>FoodRaw</li>
          </categories>
        </allowances>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
        <allowances>
          <categories>
            <li>FoodRaw</li>
          </categories>
          <exceptedThingDefs>
            <li>Human_Meat</li>
          </exceptedThingDefs>
        </allowances>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <statBases>
      <WorkToBuild>330</WorkToBuild>
      <MaxHealth>100</MaxHealth>
      <Flammability>1.0</Flammability>
    </statBases>
    <description>Holds resources for use by machines like nutrient paste dispensers.</description>
    <costList>
      <Metal>15</Metal>
    </costList>
    <tickerType>Never</tickerType>
    <rotatable>true</rotatable>
    <neverMultiSelect>true</neverMultiSelect>
    <killedLeavings>
      <ChunkSlag>1</ChunkSlag>
    </killedLeavings>
    <filthLeavings>
      <SlagRubble>2</SlagRubble>
    </filthLeavings>
    <designationCategory>Production</designationCategory>
    <staticSunShadowHeight>0.3</staticSunShadowHeight>
    <itemSurface>true</itemSurface>
    <placementRestricters>
      <li>PlacementRestricter_NextToHopperAccepter</li>
    </placementRestricters>
    <designationHotKey>H</designationHotKey>
  </ThingDef>



