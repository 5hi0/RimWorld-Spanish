<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>


  <ThingDef Name="BaseWeaponNeolithic" Abstract="True">
    <category>Item</category>
    <eType>Equipment</eType>
    <thingClass>Equipment</thingClass>
    <equipmentType>Primary</equipmentType>
    <pathCost>10</pathCost>
    <useStandardHealth>True</useStandardHealth>
    <selectable>True</selectable>
    <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    <statBases>
      <MaxHealth>100</MaxHealth>
      <Flammability>1.0</Flammability>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <techLevel>Neolithic</techLevel>
    <weaponTags>
      <li>Neolithic</li>
    </weaponTags>
    <storeCategories>
      <li>Weapons</li>
    </storeCategories>
    <comps>
      <li>
        <compClass>CompForbiddable</compClass>
      </li>
    </comps>
  </ThingDef>



  <ThingDef Name="BaseProjectileNeolithic" Abstract="True">
    <category>Projectile</category>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Projectile</altitudeLayer>
    <thingClass>Bullet</thingClass>
    <label>arrow</label>
    <useStandardHealth>False</useStandardHealth>
    <neverMultiSelect>True</neverMultiSelect>
    <shaderType>Transparent</shaderType>
  </ThingDef>


  <!-- ========================== SPECIFICS ============================== -->



  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>Arrow_Short</defName>
    <label>shortbow arrow</label>
    <graphicPathSingle>Things/Projectile/Arrow_Small</graphicPathSingle>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Arrow</damageDef>
      <DamageAmountBase>10</DamageAmountBase>
      <Speed>44</Speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>Bow_Short</defName>
    <label>short bow</label>
    <description>A simple short bow, made with skill, but using only the most primitive technologies.</description>
    <graphicPathSingle>Things/Item/Equipment/BowShort</graphicPathSingle>
    <soundInteract>BowSmall</soundInteract>
    <tradersCarry>True</tradersCarry>
    <baseMarketValue>60</baseMarketValue>
    <weaponTags>
      <li>NeolithicRanged</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <cooldownTicks>40</cooldownTicks>
        <hasStandardCommand>true</hasStandardCommand>
        <projectileDef>Arrow_Short</projectileDef>
        <accuracyTouch>0.89</accuracyTouch>
        <accuracyShort>0.64</accuracyShort>
        <accuracyMedium>0.41</accuracyMedium>
        <accuracyLong>0.22</accuracyLong>
        <warmupTicks>170</warmupTicks>
        <range>31</range>
        <fireSound>BowSmall</fireSound>
      </li>
    </verbs>
  </ThingDef>


  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>Pilum_Thrown</defName>
    <label>pilum (thrown)</label>
    <graphicPathSingle>Things/Projectile/Pilum</graphicPathSingle>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Stab</damageDef>
      <DamageAmountBase>30</DamageAmountBase>
      <Speed>26</Speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>Pila</defName>
    <label>pila</label>
    <description>A bundle of pila, non-reusable throwing spears.</description>
    <graphicPathSingle>Things/Item/Equipment/Pilum</graphicPathSingle>
    <soundInteract>Interact_BeatFire</soundInteract>
    <tradersCarry>True</tradersCarry>
    <baseMarketValue>90</baseMarketValue>
    <weaponTags>
      <li>NeolithicRanged</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <projectileDef>Pilum_Thrown</projectileDef>
        <accuracyTouch>0.91</accuracyTouch>
        <accuracyShort>0.71</accuracyShort>
        <accuracyMedium>0.50</accuracyMedium>
        <accuracyLong>0.32</accuracyLong>
        <warmupTicks>260</warmupTicks>
        <cooldownTicks>270</cooldownTicks>
        <range>24</range>
        <fireSound>Interact_BeatFire</fireSound>
      </li>
    </verbs>
  </ThingDef>



  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>Arrow_Great</defName>
    <label>greatbow arrow</label>
    <graphicPathSingle>Things/Projectile/Arrow_Small</graphicPathSingle>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Arrow</damageDef>
      <DamageAmountBase>15</DamageAmountBase>
      <Speed>49</Speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>Bow_Great</defName>
    <label>great bow</label>
    <description>A powerful greatbow. Fires a heavy arrow long distances.</description>
    <graphicPathSingle>Things/Item/Equipment/BowGreat</graphicPathSingle>
    <soundInteract>BowLarge</soundInteract>
    <tradersCarry>True</tradersCarry>
    <baseMarketValue>180</baseMarketValue>
    <weaponTags>
      <li>NeolithicRanged</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <cooldownTicks>40</cooldownTicks>
        <hasStandardCommand>true</hasStandardCommand>
        <projectileDef>Arrow_Great</projectileDef>
        <accuracyTouch>0.93</accuracyTouch>
        <accuracyShort>0.77</accuracyShort>
        <accuracyMedium>0.59</accuracyMedium>
        <accuracyLong>0.42</accuracyLong>
        <warmupTicks>220</warmupTicks>
        <range>34</range>
        <fireSound>BowGreat</fireSound>
      </li>
    </verbs>
  </ThingDef>






  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>ThrownStone</defName>
    <label>thrown stone</label>
    <graphicPathSingle>Things/Projectile/Stone</graphicPathSingle>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Blunt</damageDef>
      <DamageAmountBase>6</DamageAmountBase>
      <Speed>26</Speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>HandfulOfStones</defName>
    <label>handful of stones</label>
    <description>A handful of stones picked up off the floor. Not as good as a gun or even a bow, but these can still knock your teeth out when thrown in anger.</description>
    <graphicPathSingle>Things/Item/Equipment/Default</graphicPathSingle>
    <soundInteract>BowLarge</soundInteract>
    <tradersCarry>False</tradersCarry>
    <baseMarketValue>1</baseMarketValue>
    <destroyOnDrop>True</destroyOnDrop>
    <menuHidden>True</menuHidden>
    <weaponTags>
      <li>NeolithicRanged</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <cooldownTicks>40</cooldownTicks>
        <hasStandardCommand>true</hasStandardCommand>
        <projectileDef>ThrownStone</projectileDef>
        <accuracyTouch>0.89</accuracyTouch>
        <accuracyShort>0.64</accuracyShort>
        <accuracyMedium>0.41</accuracyMedium>
        <accuracyLong>0.22</accuracyLong>
        <warmupTicks>150</warmupTicks>
        <range>15</range>
        <fireSound>Interact_BeatFire</fireSound>
      </li>
    </verbs>
  </ThingDef>



</ThingDefs>


